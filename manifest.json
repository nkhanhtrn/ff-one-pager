{
  "manifest_version": 3,
  "name": "FF One Pager - Hello World",
  "version": "1.0.0",
  "description": "A Firefox extension with Vue.js that displays a hello world popup",
  "icons": {
    "48": "icons/icon-48.svg",
    "96": "icons/icon-96.svg"
  },
  "action": {
    "default_popup": "index.html",
    "default_title": "FF One Pager",
    "default_icon": {
      "48": "icons/icon-48.svg"
    }
  },
  "permissions": [
    "activeTab"
  ],
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "ff-one-pager@example.com",
      "strict_min_version": "109.0"
    }
  }
}
