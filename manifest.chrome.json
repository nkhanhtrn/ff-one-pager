{
  "manifest_version": 3,
  "name": "One Pager",
  "version": "1.0.0",
  "description": "Quickly jot down notes on a single page new tab with markdown support.",
  "icons": {
    "48": "icon.svg",
    "96": "icon.svg"
  },
  "action": {
    "default_popup": "index.html",
    "default_title": "One Pager",
    "default_icon": {
      "48": "icon.svg",
      "96": "icon.svg"
    }
  },
  "permissions": [
    "activeTab"
  ],
  "chrome_url_overrides": {
    "newtab": "index.html"
  }
}
